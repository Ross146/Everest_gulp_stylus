@media only screen and (max-width : 1600px)
  .story
    .story-text
      top 483px;


@media only screen and (max-width : 1500px)
  header
    .header-bottom
      h4
        letter-spacing 5px

@media only screen and (max-width : 1500px)
  footer
    .gallery-videos
      div
        width 400px
        height 400px
        outline-offset: -80px
        outline-width 80px
        &:after
          width 60%
          height: 60%
        h4
          margin 260px 0 0 67px
        &:hover, &:active, &:focus
          h4
            margin-top 180px
@media only screen and (max-width : 1200px)
  .characters
    h3.title
      color gray
      padding 535px 0 0 570px
    .alpinist-list
      bottom 0
      left 50%
      transform: translateX(-50%)
      margin-left -350px
  header
    .header-top
      .and
        display: none
    .header-bottom
      h4
        font-size: 50 * $px_em
      .promo
        p
          width 950px


@media only screen and (max-width : 992px)
  footer
    .gallery-videos
      div
        width 350px
        height 350px
        outline-offset: -50px
        outline-width 50px
        margin-right 0
        &:after
          width 71.3%
          height: 71.3%
        h4
          margin 240px 0 0 67px
  .characters
    .alpinist-list
      right 0
      width 650px
      ul
        li
          margin-right 30px
          .img
            width: 100px
            height: 100px
      .arrow-right
        margin-bottom: 15px
    .alpinist-right
      display none
    h3.title
      padding 535px 0 0 50px
  header
    .header-top
      h1
        font-size: 200 * $px_em
        letter-spacing 30px
        line-height 1.2
      .actors
        margin-top 550px
    .header-bottom
      h4
        font-size: 40 * $px_em
        letter-spacing: 0
      .promo
        p
          width 700px
/* Small Devices, Tablets */
@media only screen and (max-width : 768px)
  footer
    .gallery-videos
      bottom 100px
  .characters
    .alpinist-list
      width 450px
      margin-left: -210px
      ul
        li
          margin-right 0px
      .arrow-right
        margin-left 5px
  .story
    .story-text
      top 483px;
      left 50%
      transform: translateX( -50%)
      width: 400px
      margin-left -175px
  header
    .header-top
      h1
        font-size: 180 * $px_em
        letter-spacing 15px
      .actors
        margin-top 450px
        padding 0 90px
    .header-bottom
      background: radial-gradient(left bottom, farthest-side, rgb(191,191,191), #fff);
      .promo
        outline none
        width 400px
        height: 400px
        p
          width: 400px
          color white
        &:after
          display none
    /*Disable Animation on Mobile Devices*/
  .animated
    /*CSS transitions*/
    -o-transition-property: none !important
    -moz-transition-property: none !important
    -ms-transition-property: none !important
    -webkit-transition-property: none !important
    transition-property: none !important
    /*CSS transforms*/
    -o-transform: none !important
    -moz-transform: none !important
    -ms-transform: none !important
    -webkit-transform: none !important
    transform: none !important
    /*CSS animations*/
    -webkit-animation: none !important
    -moz-animation: none !important
    -o-animation: none !important
    -ms-animation: none !important
    animation: none !important
