@media only screen and (max-width : 480px)
  footer
    .gallery-videos
      div
        width 315px
        height 315px
        h4
          margin 207px 0 0 45px
  .characters
    h3.title
      font-size: 70px
      padding-left 18px
    .alpinist-list
      width 270px
      bottom -150px
      margin-left -125px
      ul
        width 240px
      .arrow-right
        margin 0 0 85px 0
  .story
    .story-text
      width: 300px
  header
    .header-top
      h1
        font-size: 120 * $px_em
        letter-spacing 5px
        line-height: 2
      .actors
        margin-top 400px
        padding 0 30px
        li
          padding 0 4px
    .header-bottom
      .promo
        width 320px
        height: 320px
        p
          width 320px
