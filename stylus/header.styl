@import "nib";
@import "/import/_var.styl";



body
  font-family: Bebas, sans-serif
  font-size: 25px
  overflow-x hidden
ul
  margin: 0
  padding: 0
  list-style-type: none
header
  .header-top
    padding: 90px 0
    min-height: 1545px
    background-image: url(../img/header-mountain.png)
    background-size 1920px auto
    background-position: center -38px
    background-repeat: no-repeat
    position: relative
    z-index: 2
    &:before
      position: absolute
      top 253px
      left: 50%
      transform: translateX(-63%)
      background-image url("../img/header-mountain-top.png")
      background-repeat: no-repeat
      background-position: top
      background-size: cover
      width: 396px
      height: 194px
      content ''
      z-index: 1
    h1
      background-clip text
      color rgba(255,255,255,.5)
      letter-spacing 55px
      text-align center
      font-weight: 200
      font-family: Steelfish, sans-serif
      text-transform: uppercase
      margin 0
      font-size: 270 * $px_em
      line-height: 1
    .actors
      display flex
      flex-wrap: wrap
      justify-content: space-around
      padding 0 180px
      margin-top 640px
      color #dee1e4
      li
        //outline: 1px solid red
        vertical-align: center
        text-align: center
        align-self center
        padding 0 8px
        p
          font-size: 22 * $px_em
          b
            font-weight: normal
            font-size: 31* $px_em
      .and
        font-size: 16 * $px_em

  .header-bottom
    margin-bottom -320px
    padding-bottom: 125px
    position relative
    width 100%
    left 0
    top -320px
    background: radial-gradient(left bottom, farthest-side, rgb(191,191,191) 500px, #fff);
    text-align center
    h4
      font-size: 83 * $px_em
      letter-spacing 15px
      text-align: center
      margin 0
      line-height: 1
      opacity: .07
    .promo
      width: 600px
      height: 600px
      outline: 180px solid rgba(255,255,255,.8)
      outline-offset: -180px
      background-image url(../img/promo-picture.jpg)
      background-position: -170px -30px
      //margin 180px auto
      position relative
      left 50%
      top 500px
      transform: translate(-50%, -50%)
      &:after
        content ''
        position absolute
        width 40%
        height: 40%
        background-color: transparent
        box-shadow: 0 0 50px rgba(0,0,0,.5);
        top 50%
        left 50%
        display: block
        transform: translate(-50%, -50%)
      p
        position absolute
        width 1250px
        display: block
        top 50%
        left 50%
        margin 0
        transform: translate( -50%,-50%)
        background: radial-gradient(circle closest-side, #bcbec2 119px, #6d6d71 120px);
        background-clip: text;
        color: transparent;
        letter-spacing 2px

  .trailer
    margin-top 400px
    letter-spacing 2px
    .button
      width 91px
      height 91px
      border-radius 91px
      background-image: url(../img/button-watch.png)
      opacity .3
      cursor pointer
      display: inline-block;
      transition: transform .8s ease-in-out 0s;
      &:hover, &:focus, &:active
        opacity 1;
        transform:rotate(360deg)
        z-index: 1000;
  .cloud
    position absolute
    bottom 0
    width 100%
    height 50%
    background-position: top
    background-repeat: no-repeat
    background-size cover
  .cloud-left
    left 0
    background-image: url(../img/cloud-left.png)
  .cloud-right
    right 0
    background-image: url(../img/cloud-right.png)



